@model MVCProject10._5._2019.Models.admin_tbl
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Sign In</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/css/styles.css" rel="stylesheet" />
</head>
<body style="background-image: url('../../content/images/3.jpg'); background-size: cover; box-sizing:border-box;">
    <div class="container">
        <div class="col-md-6 col-md-offset-2">
            <h1 class="text-center">Login Form</h1>
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
            {
                    <div class="alert-danger">@ViewBag.error</div>
                    <br />
                    @Html.TextBoxFor(x => x.username, new { @class = "form-control", @placeholder = "Username" })
                    @Html.ValidationMessageFor(x => x.username)
                    <br />
                    @Html.TextBoxFor(x => x.password, new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(x => x.password)
                    <br />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">sign In</button>
                        @Html.ActionLink("Sign Up","SignUp","Admin",null,new { @class="btn btn-primary"})
                    </div>
                }          
        </div> 
    </div>
    <script src="~/script/js/jquery-3.0.0.min.js"></script>
    <script src="~/script/js/bootstrap.min.js"></script>
    <script src="~/script/js/custom.js"></script>
</body>
</html>
