@model MVCProject10._5._2019.Models.customer
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.cust_id)
        <div class="form-group">
            @Html.LabelFor(model => model.cust_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.cust_name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cust_name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.cus_email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.cus_email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cus_email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.cust_phone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.cust_phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cust_phone)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to Index", "Index", null, new { @class = "btn btn-success" })
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
